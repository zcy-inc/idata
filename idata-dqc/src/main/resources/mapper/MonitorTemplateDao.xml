<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhengcaiyun.idata.dqc.dao.MonitorTemplateDao">

    <resultMap type="cn.zhengcaiyun.idata.dqc.model.entity.MonitorTemplate" id="DqcMonitorTemplateMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="monitorObj" column="monitor_obj" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="del" column="del" jdbcType="INTEGER"/>
        <result property="creator" column="creator" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="editor" column="editor" jdbcType="VARCHAR"/>
        <result property="editTime" column="edit_time" jdbcType="TIMESTAMP"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="category" column="category" jdbcType="VARCHAR"/>
        <result property="outputType" column="output_type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="getById" resultMap="DqcMonitorTemplateMap">
        select
          id, type, monitor_obj, content, status, del, creator, create_time, editor, edit_time, name, category, output_type
        from dqc_monitor_template
        where del=0 and id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="getByPage" resultMap="DqcMonitorTemplateMap" parameterType="cn.zhengcaiyun.idata.dqc.model.entity.MonitorTemplate">
        select
          id, type, monitor_obj,if(type='system',content,'') content,  status, del, creator, create_time, editor, edit_time, name, category, output_type
        from dqc_monitor_template
        where del=0
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="monitorObj != null and monitorObj != ''">
                and monitor_obj = #{monitorObj}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="creator != null and creator != ''">
                and creator = #{creator}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="category != null and category != ''">
                and category = #{category}
            </if>
        limit #{startIndex}, #{pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer" parameterType="cn.zhengcaiyun.idata.dqc.model.entity.MonitorTemplate">
        select count(1)
        from dqc_monitor_template
        where del=0
        <if test="type != null and type != ''">
            and type = #{type}
        </if>
        <if test="monitorObj != null and monitorObj != ''">
            and monitor_obj = #{monitorObj}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="creator != null and creator != ''">
            and creator = #{creator}
        </if>
        <if test="name != null and name != ''">
            and name like concat('%',#{name},'%')
        </if>
        <if test="category != null and category != ''">
            and category = #{category}
        </if>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="cn.zhengcaiyun.idata.dqc.model.entity.MonitorTemplate" >
        insert into dqc_monitor_template(type, monitor_obj, content, status, del, creator, create_time, editor, edit_time, name, category, output_type)
        values (#{type}, #{monitorObj}, #{content}, #{status}, 0, #{creator}, now(), #{editor}, now(), #{name}, #{category}, #{outputType})
    </insert>


    <!--通过主键修改数据-->
    <update id="update" parameterType="cn.zhengcaiyun.idata.dqc.model.entity.MonitorTemplate">
        update dqc_monitor_template
        <set>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="monitorObj != null and monitorObj != ''">
                monitor_obj = #{monitorObj},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="del != null">
                del = #{del},
            </if>
            <if test="editor != null and editor != ''">
                editor = #{editor},
            </if>
                edit_time = now(),
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="category != null and category != ''">
                category = #{category},
            </if>
            <if test="outputType != null">
                output_type = #{outputType},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>

